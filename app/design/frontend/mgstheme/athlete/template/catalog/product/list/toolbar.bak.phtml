<?php
/**
 * Product list toolbar
 *
 * @see Mage_Catalog_Block_Product_List_Toolbar
 */
?>
<?php if($this->getCollection()->getSize()): ?>
<div class="toolbar">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12 npp">
                <span class="amount">
                    <?php if($this->getLastPageNum()>1): ?>
                                            <?php if(Mage::getStoreConfig('mpanel/catalog/more_view')): ?>
                                                    <?php echo $this->__('Items %s to %s of %s total', 1, $this->getLastNum(), $this->getTotalNum()) ?>
                                            <?php else: ?>
                                                    <?php echo $this->__('Items %s to %s of %s total', $this->getFirstNum(), $this->getLastNum(), $this->getTotalNum()) ?>
                                            <?php endif ?>
                    <?php else: ?>
                        <span style="color: #8d9095"><?php echo $this->__('%s Item(s)', $this->getTotalNum()) ?></span>
                    <?php endif; ?>
                </span>
                <div class="limiter">
                    <label><?php echo $this->__('Show') ?></label>                	
                    <select onchange="setLocation(this.value)">
                    <?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
                        <option value="<?php echo $this->getLimitUrl($_key) ?>"<?php if($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
                            <?php echo $_limit ?>
                        </option>
                    <?php endforeach; ?>
                    </select>
                </div>
                <?php if($this->getCurrentDirection() == 'desc'): ?>
                       <a href="<?php echo $this->getOrderUrl(null, 'asc') ?>" title="<?php echo $this->__('Set Ascending Direction') ?>"><i class="fa fa-long-arrow-up"></i></a>
                <?php else: ?>
                       <a href="<?php echo $this->getOrderUrl(null, 'desc') ?>" title="<?php echo $this->__('Set Descending Direction') ?>"><i class="fa fa-long-arrow-down"></i></a>
                <?php endif; ?>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12 type_sort">
            	<div class="right pull-right">
                <?php if( $this->isExpanded() ): ?>		                    
		                    <select onchange="setLocation(this.value)">
		                    <?php foreach($this->getAvailableOrders() as $_key=>$_order): ?>
		                            <option value="<?php echo $this->getOrderUrl($_key, 'asc') ?>"<?php if($this->isOrderCurrent($_key)): ?> selected="selected"<?php endif; ?>>
		                                    <?php echo $this->__('Sort By').' '.$this->__($_order) ?>
		                            </option>
		                    <?php endforeach; ?>
		                    </select>
		
		            <?php if( $this->isEnabledViewSwitcher() ): ?>		                    
                            <?php $_modes = $this->getModes(); ?>
                            <?php if($_modes && count($_modes)>1): ?>
                            <?php foreach ($this->getModes() as $_code=>$_label): ?>
                                    <?php if($this->isModeActive($_code)): ?>
                                    	<?php if(strtolower($_code) != "grid"): ?>
                                    		<span title="<?php echo $_label ?>" class="<?php echo strtolower($_code); ?>"><i class="fa fa-list"></i></span>&nbsp;
                                        <?php else: ?>
                                        	<span title="<?php echo $_label ?>" class="<?php echo strtolower($_code); ?>"><i class="fa fa-th-large"></i></span>&nbsp;
                                        <?php endif; ?>
                                    <?php else: ?>
                                    	<?php if(strtolower($_code) != "grid"): ?>
                                            <a href="<?php echo $this->getModeUrl($_code) ?>" title="<?php echo $_label ?>" class="<?php echo strtolower($_code); ?>"><i class="fa fa-list"></i></a>&nbsp;
                                        <?php else: ?>
                                        	<a href="<?php echo $this->getModeUrl($_code) ?>" title="<?php echo $_label ?>" class="<?php echo strtolower($_code); ?>"><i class="fa fa-th-large"></i></a>&nbsp;
                                        <?php endif; ?>
                                    <?php endif; ?>
                            <?php endforeach; ?>
                    		<?php endif; ?>
            		<?php endif; ?>
     			<?php endif; ?>
     			</div>
            </div>
        </div>
</div>
<?php endif ?>
