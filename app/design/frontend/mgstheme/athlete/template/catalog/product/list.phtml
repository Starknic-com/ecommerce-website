<?php
/**
 * Product list template
 *
 * @see Mage_Catalog_Block_Product_List
 */
?>
<?php
    $_productCollection=$this->getLoadedProductCollection();
    $_helper = $this->helper('catalog/output');
	$panelHelper = $this->helper('mpanel');
	$size = $panelHelper->convertRatioToSize();
?>
	
<?php if(!$_productCollection->count()): ?>
	<div class="alert alert-warning">
		<a href=""><?php echo $this->__('There are no products matching the selection.') ?></a>
	</div>
<?php else: ?>
	<div class="category-products">
		<?php echo $this->getToolbarBlock()->setTemplate('catalog/product/list/toolbar.phtml')->toHtml(); ?>
		<?php // List mode ?>
		<?php if($this->getMode()!='grid'): ?>
		<?php $_iterator = 0; ?>
		<ol id="products-list" class="products-list products-grid">
		<?php foreach ($_productCollection as $_product): ?>
			<li class="item<?php if( ++$_iterator == sizeof($_productCollection) ): ?> last<?php endif; ?>" >
				<?php // Product Image ?>
				<div class="row">
					<?php echo $panelHelper->getProductLabel($_product) ?>
					<div class="product-image col-lg-4 col-md-4 col-sm-4">
						<a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" class="product-image"><img class="img-responsive" src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize($size['width'], $size['height']); ?>" alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" /></a>
						<?php if($this->helper('core')->isModuleEnabled('MGS_QuickView') && Mage::getStoreConfig('quickview/general/active')): ?>
							<a href="<?php echo $_product->getProductUrl() ?>" class="link-details" onclick="quickView('<?php echo $_product->getProductUrl() ?>'); return false;"><i class="fa fa-arrows"></i></a>
						<?php endif ?>
					</div>
					<?php // Product description ?>
					<div class="info-products-list col-lg-8 col-md-8 col-sm-8">
						<?php $_productNameStripped = $this->stripTags($_product->getName(), null, true); ?>
						<span class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $_productNameStripped; ?>"><?php echo $_helper->productAttribute($_product, $_product->getName() , 'name'); ?></a></span>
						<hr />
						<div class="desc std">
							<?php echo $_helper->productAttribute($_product, $_product->getShortDescription(), 'short_description') ?>
							<a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $_productNameStripped ?>" class="link-learn"><?php echo $this->__('View Details') ?></a>
						</div>
						<hr />
						<div class="funs">
							<div class="content-list">
								<?php echo $this->getPriceHtml($_product, true) ?>
								<?php echo $this->getReviewsSummaryHtml($_product, false, true) ?>
							</div>
							<ul class="add-to-links">
								<?php if($this->helper('core')->isModuleEnabled('MGS_QuickView') && Mage::getStoreConfig('quickview/general/active')): ?>
									<li><a href="<?php echo $_product->getProductUrl() ?>" class="link-details" onclick="quickView('<?php echo $_product->getProductUrl() ?>'); return false;"><i class="fa fa-search"></i></a></li>
								<?php endif ?>
								<?php if ($this->helper('wishlist')->isAllow() && !Mage::getStoreConfig('mpanel/catalog/wishlist_button')): ?>
									<li><a href="<?php echo $this->helper('wishlist')->getAddUrl($_product) ?>" class="link-wishlist"><i class="fa fa-heart"></i></a></li>
								<?php endif; ?>
								<?php if($_compareUrl=$this->getAddToCompareUrl($_product) && !Mage::getStoreConfig('mpanel/catalog/compare_button')): ?>
									<li><a href="<?php echo $_compareUrl ?>" class="link-compare"><i class="fa fa-retweet"></i></a></li>
								<?php endif; ?>
							</ul>
							<?php if($_product->isSaleable()): ?>
								<button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')"><i class="fa fa-shopping-cart"></i></button>
							<?php else: ?>
								<p class="availability out-of-stock"><span><?php echo $this->__('Out of stock') ?></span></p>
							<?php endif; ?>
						</div>
					</div>
				</div>
			</li>
		<?php endforeach; ?>
		</ol>
		<script type="text/javascript">decorateList('products-list', 'none-recursive')</script>
		<?php else: ?>

		<?php // Grid Mode ?>

		<?php $_collectionSize = $_productCollection->count() ?>
		<?php $_columnCount = $this->getColumnCount(); ?>
		
		<?php $col = $panelHelper->getCol() ?>
		<div class="row">
			<ul class="products-list products-grid products-grid-<?php echo $col ?>">

			<?php $i=0; foreach ($_productCollection as $_product): ?>
				<?php $_product = Mage::getModel('catalog/product')->load($_product->getId()) ?>
				<li class="item col-md-<?php echo $col ?> col-sm-6 col-xs-12" <?php  if(Mage::getStoreConfig('mpanel/catalog/preload')): ?> data-appear-animation="fadeInUp" <?php endif;?>>				
					<div class="product-image-wrapper">
						<?php echo $panelHelper->getProductLabel($_product) ?>
							
						<div class="product-content">
							<div class="product-image">
								<a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>" class="product-image">
									<img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize($size['width'], $size['height']) ?>" alt="<?php echo $this->stripTags($_product->getName(), null, true) ?>" class="img-responsive"/>
								
								</a>
							</div>
							<div class="info-products">
								<div class="product-name">
									<a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>)"><?php echo $this->helper('catalog/output')->productAttribute($_product, $_product->getName() , 'name') ?></a>
									<div class="product-bottom"></div>
								</div>
								<div class="no-price">
									<?php echo $this->getPriceHtml($_product, true, '-widget-new-grid') ?>
								</div>
								<?php //echo $this->getReviewsSummaryHtml($_product, false, true) ?>
								<div class="actions">										
										<ul class="add-to-links">
											<?php if ($_product->isSaleable()): ?>
											<li>
												<button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="btn btn-cart cart-product-grid btn-default btn-primary" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')"><i class="fa fa-shopping-cart"></i></button>
											</li>
											<?php endif; ?>	
											<?php if($this->helper('core')->isModuleEnabled('MGS_QuickView') && Mage::getStoreConfig('quickview/general/active')): ?>
											<li><button class="btn btn-quickview quick-view" onclick="quickView('<?php echo $_product->getProductUrl() ?>'); return false;" title="<?php echo $this->__('Quick View') ?>"><i class="fa fa-search"></i></button></li>
											<?php endif ?>										
											<?php if($_compareUrl=$this->helper('catalog/product_compare')->getAddUrl($_product) && !Mage::getStoreConfig('mpanel/catalog/wishlist_button')): ?>
												<li><a href="<?php echo $_compareUrl ?>" class="link-compare" title="<?php echo $this->__('Add to Compare') ?>"><i class="fa fa-retweet"></i></a></li>
											<?php endif; ?>
											<?php if ($this->helper('wishlist')->isAllow() && !Mage::getStoreConfig('mpanel/catalog/compare_button')) : ?>
												<li><a href="<?php echo $this->helper('wishlist')->getAddUrl($_product) ?>" class="link-wishlist" title="<?php echo $this->__('Add to Wishlist') ?>"><i class="fa fa-heart"></i></a></li>
											<?php endif; ?>
										</ul>									
								</div>
							</div>
							<a href="<?php echo $_product->getProductUrl() ?>" class="link-details arrows"><i class="fa fa-arrows"></i></a>
						</div>
					</div>
				</li>
				<?php endforeach ?>
			</ul>
		</div>
		<?php endif; ?>
		<div class="toolbar-bottom">
			<?php echo $this->getToolbarBlock()->setTemplate('catalog/product/list/bottom_toolbar.phtml')->toHtml(); ?>
		</div>
	</div>
<?php endif; ?>