<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <SmsWeb_SMSNotifications>
            <version>0.1.5</version>
        </SmsWeb_SMSNotifications>
    </modules>
    <global>
        <models>
            <smsnotifications>
                <class>SmsWeb_SMSNotifications_Model</class>
            </smsnotifications>
        </models>
        <blocks>
            <smsnotifications>
                <class>SmsWeb_SMSNotifications_Block</class>
            </smsnotifications>
        </blocks>
        <helpers>
            <smsnotifications>
                <class>SmsWeb_SMSNotifications_Helper</class>
            </smsnotifications>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <SmsWeb_SMSNotifications before="Mage_Adminhtml">SmsWeb_SMSNotifications_Adminhtml</SmsWeb_SMSNotifications>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <admin_system_config_changed_section_smsnotifications>
                <observers>
                    <smsnotifications>
                        <type>singleton</type>
                        <class>smsnotifications/observer</class>
                        <method>configSaveAfter</method>
                    </smsnotifications>
                </observers>
            </admin_system_config_changed_section_smsnotifications>			
            <sales_order_status_history_save_before>
                <observers>
                    <imsms_sales_order_status_history_save_before>
                        <type>singleton</type>
                        <class>smsnotifications/observer</class>
                        <method>salesOrderStatusHistorySaveBefore</method>
                        <args></args>
                    </imsms_sales_order_status_history_save_before>
                </observers>
            </sales_order_status_history_save_before>
        </events>
    </adminhtml>
    <frontend>
        <routers>
            <smsnotifications>
                <use>standard</use>
                <args>
                    <module>SmsWeb_SMSNotifications</module>
                    <frontName>smsalert</frontName>
                </args>
            </smsnotifications>
        </routers>
		<layout>
			<updates>
                <smsnotifications>
                    <file>SmsWeb/smsalert.xml</file>
                </smsnotifications>
            </updates>
       </layout>
        <events>
            <controller_action_predispatch_customer_account_loginPost>
                <observers>
                    <smsnotifications_controller_action_predispatch_customer_account_loginPost>
                        <class>smsnotifications/observer</class>
                        <method>controllerActionPredispatchCustomerAccountLoginPost</method>
                    </smsnotifications_controller_action_predispatch_customer_account_loginPost>
                </observers>
            </controller_action_predispatch_customer_account_loginPost>
            <controller_action_predispatch_customer_account_resetpassword>
                <observers>
                    <smsnotifications_controller_action_predispatch_customer_account_resetpassword>
                        <class>smsnotifications/observer</class>
                        <method>controllerActionPredispatchCustomerAccountResetPassword</method>
                    </smsnotifications_controller_action_predispatch_customer_account_resetpassword>
                </observers>
            </controller_action_predispatch_customer_account_resetpassword>
        </events>
    </frontend>
	<global>
        <events>
            <sales_order_shipment_save_after>
                <observers>
                    <smsnotifications>
                        <type>singleton</type>
                        <class>smsnotifications/observer</class>
                        <method>salesOrderShipmentSaveAfter</method>
                    </smsnotifications>
                </observers>
            </sales_order_shipment_save_after>
            <sales_order_invoice_save_after>
                <observers>
                    <smsnotifications>
                        <type>singleton</type>
                        <class>smsnotifications/observer</class>
                        <method>salesOrderInvoiceSaveAfter</method>
                    </smsnotifications>
                </observers>
            </sales_order_invoice_save_after>
            <sales_order_save_after>
                <observers>
                    <smsnotifications>
                        <type>singleton</type>
                        <class>smsnotifications/observer</class>
                        <method>salesOrderSaveAfter</method>
                    </smsnotifications>
                </observers>
            </sales_order_save_after>
        </events>
    </global>
 </config>